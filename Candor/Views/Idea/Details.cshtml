@model Candor.Models.IdeaDetail

@{
	ViewBag.Title = "Details";
}

<h2 class="text-white text-center my-5">"
		@Html.DisplayFor(model => model.Title)
	"
	</h2>

<div class="text-center">
	<hr />
	@Html.HiddenFor(model => model.IdeaId)

	<dl class="dl-horizontal text-white">

		
		<dt class="text-white-50">
			@Html.DisplayNameFor(model => model.UserName)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.UserName)
		</dd>

		<dt class="text-white-50">
			@Html.DisplayNameFor(model => model.Title)
		</dt>

		<dd class="text-white">
			@Html.DisplayFor(model => model.Title)
		</dd>

		<dt class="text-white-50">
			@Html.DisplayNameFor(model => model.Content)
		</dt>

		<dd class="text-white">
			@Html.DisplayFor(model => model.Content)
		</dd>

		<dt class="text-white-50">
			@Html.DisplayNameFor(model => model.DateCreated)
		</dt>

		<dd class="text-white">
			@Html.DisplayFor(model => model.DateCreated)
		</dd>

		<dt class="text-white-50">
			@Html.DisplayNameFor(model => model.LastModified)
		</dt>

		<dd class="text-white">
			@Html.DisplayFor(model => model.LastModified)
		</dd>

		<dt class="text-white-50">
			@Html.DisplayNameFor(model => model.AverageRating)
		</dt>

		<dd class="text-white">
			@Html.DisplayFor(model => model.AverageRating)
		</dd>

		<dt class="text-white-50">
			@Html.DisplayNameFor(model => model.Completed)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Completed)
		</dd>

	</dl>
</div>
<p class="text-center">
		@if (Model.IsEditable)
		{
			@Html.ActionLink("Delete", "Delete", new { id = Model.IdeaId }, htmlAttributes: new { @class = "btn btn-danger btn-small" })
			@Html.ActionLink("Edit", "Edit", new { id = Model.IdeaId }, htmlAttributes: new { @class = "btn btn-warning btn-small" })
		}

			@Html.ActionLink("Rate this Idea", "Create", "Rating", new { id = Model.IdeaId }, htmlAttributes: new { @class = "btn btn-info btn-small" })
			@Html.ActionLink("View Ratings", "Get", "Rating", new { id = Model.IdeaId }, htmlAttributes: new { @class = "btn btn-info btn-small" })
			@Html.ActionLink("Back to Ideas", "Index", "Idea", htmlAttributes: new { @class = "btn btn-info btn-small" }) |
</p>
