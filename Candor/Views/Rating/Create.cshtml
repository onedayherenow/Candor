@model Candor.Models.RatingCreate

@{
	ViewBag.Title = "Create";
}

<h1 class="text-center">Create a Rating</h1>

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="row mb-3">
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
	</div>

	<div class="row mb-3">
		@Html.LabelFor(model => model.RatingScore, htmlAttributes: new { @class = "col-md-3 col-form-label text-white" })
		<div class="col-md-9">
			@Html.EditorFor(model => model.RatingScore, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(model => model.RatingScore, "", new { @class = "text-danger" })
		</div>
	</div>

	<div class="row mb-3">
		@Html.LabelFor(model => model.Comment, htmlAttributes: new { @class = "col-md-3 col-form-label text-white" })
		<div class="col-md-9">
			@Html.TextAreaFor(model => model.Comment, htmlAttributes: new { @class = "form-control" })
			@Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
		</div>
	</div>

	<div class="row mb-3">
		<div class="btn-group btn-group-lg col-md-9 offset-md-3">
			<button type="submit" class="btn btn-primary bi bi-pencil"> Create</button>
		</div>
	</div>
}

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
