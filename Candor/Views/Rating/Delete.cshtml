@model Candor.Models.RatingDetail

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
	@Html.HiddenFor(model => model.IdeaId)
	<h4>RatingDetail</h4>
	<hr />
	<dl class="dl-horizontal">

		<dt>
			@Html.DisplayNameFor(model => model.RatingScore)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.RatingScore)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.Comment)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Comment)
		</dd>

	</dl>

	{
	@Html.AntiForgeryToken()

	<div class="form-actions no-color">

		@if (Model.IsEditable)
		{
			<input type="submit" value="Delete" class="btn btn-danger" />
		}


		@Html.ActionLink("Back to Ideas", "Index", "Idea", new { id = "Model.Idea" })
	</div>
	}
</div>
