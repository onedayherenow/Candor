@model Candor.Models.RatingDetail

@{
	ViewBag.Title = "Delete";
}

<h3 class="text-center my-5">Are you sure you want to delete your rating?</h3>

<div>
	@Html.HiddenFor(model => model.IdeaId)
	@Html.HiddenFor(model => model.UserName)

	<hr />
	<dl class="dl-horizontal text-center">

		<dt>
			@Html.DisplayNameFor(model => model.RatingScore)
		</dt>

		<dd class="text-white">
			@Html.DisplayFor(model => model.RatingScore)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.Comment)
		</dt>

		<dd class="text-white">
			@Html.DisplayFor(model => model.Comment)
		</dd>

	</dl>


	@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()

		<div class="form-actions no-color text-center">

			@if (Model.IsEditable)
			{
				<input type="submit" value="Delete" class="btn btn-danger" />
			}


			@Html.ActionLink("Back to List of Ideas", "Index", "Idea", null, htmlAttributes: new { @class = "btn btn-primary btn-small" })
			@Html.ActionLink("Back to Idea", "Details", "Idea", new { id = Model.IdeaId }, htmlAttributes: new { @class = "btn btn-secondary btn-small" })

			@Html.ActionLink("Back to Ratings", "Get", "Rating", new { id = Model.IdeaId }, htmlAttributes: new { @class = "btn btn-info btn-small" })
		</div>
	}
</div>
